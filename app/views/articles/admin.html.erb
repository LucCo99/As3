<% if @articles.blank? %>
  <p>There are no articles currently in the system.</p>
<% else %>
  <p>These are the current articles in our system</p>
  <ul id="articles">
    <% @articles.each do |article| %>
      <li>| <%= article.title %> | <%= article.body %> |
        <%= link_to "Show", {:action => 'show', :id => article.id} %> |
        <%= link_to "Edit", {:action => 'show', :id => article.id}  %> |
        <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: 'Are you sure you want to delete this article?' } %> |
      </li>
    <% end %>
  </ul>
  <div>
    <%= button_to "Create Article", new_article_path %>
    <%= button_to "Create News Category",'#', class: 'blank-button' %>
    <%= button_to "Edit News Category", '#', class: 'blank-button' %>
    <%= link_to "Logout", '/home', class: 'blank-button' %>
  </div>
<% end %>
<p>
  <%= link_to "Add new Article", new_article_path %>
</p>
